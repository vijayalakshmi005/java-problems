class palindrome{
    static boolean ispalindrome(String str)
    {
        StringBuilder sb=new StringBuilder(str);
        sb.reverse();
        String rev=sb.toString();
        if(str.equals(rev)) 
        {
            return true ;
        }
        else
        {
            return false;
        }
    }
        public static void main(String[]args)
        {
            System.out.println(ispalindrome("nitin"));
        }
}

OUTPUT:
true
